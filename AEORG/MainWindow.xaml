<Window x:Class="AEORG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AEORG"
        mc:Ignorable="d"
        Title="AEORG" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- ComboBox row -->
            <RowDefinition Height="*" />
            <!-- Content area -->
        </Grid.RowDefinitions>

        <!-- Command Selection ComboBox -->
        <ComboBox x:Name="CommandSelector"
                  Grid.Row="0"
                  Width="200"
                  HorizontalAlignment="Left"
                  SelectionChanged="CommandSelector_SelectionChanged"
                  Margin="100,10,0,10"
                  >
            <ComboBoxItem IsEnabled="False" IsSelected="True" Content="Please Select a Command"></ComboBoxItem>
            <ComboBoxItem Content="Gap Analysis" />
            <ComboBoxItem Content="Compare PDFs" />
        </ComboBox>

        <!-- Content area where views load -->
        <ContentControl x:Name="CommandContent"
                        Grid.Row="1" />
    </Grid>
</Window>
