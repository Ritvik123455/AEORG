<Window 
        x:Class="AEORG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AEORG"
        mc:Ignorable="d"
        Title="AEORG" 
        Height="450"
        Width="800"
        Background="Gray">

    <ScrollViewer>
        <StackPanel Margin="20">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <ComboBox x:Name="CommandSelector"
                          Grid.Row="0"
                          Width="200"
                          HorizontalAlignment="Left"
                          Margin="0"
                          Style="{StaticResource RoundedComboBox}"
                          >
                    <ComboBoxItem IsEnabled="False" IsSelected="True" Content="Please Select a Command"></ComboBoxItem>
                    <ComboBoxItem Content="Gap Analysis" />
                    <ComboBoxItem Content="Compare PDFs" />
                </ComboBox>

                <Button Margin="10,0,0,0" Content="Add" Width="50" Height="20" Click="AddCommand_Click" Background="Orange" Style="{StaticResource ButtonRound}"/>
            </StackPanel>

            <StackPanel x:Name="CommandsPanel" />
            <!-- Content area where views load -->
            <ContentControl x:Name="CommandContent" />
        </StackPanel>
        
    </ScrollViewer>
</Window>
