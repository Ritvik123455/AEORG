<UserControl x:Class="AEORG.GapAnalysis"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AEORG"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             >

    <Grid Margin="20">
        <Rectangle Stroke="Black" RadiusX="10" RadiusY="10" Fill="DarkGray"/>

        <StackPanel Margin="20">
            <!-- Title -->
            <TextBlock Text="Gap Analysis"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- Project Directory -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Project Directory" Width="150" VerticalAlignment="Center"/>
                <TextBox x:Name="ProjectDirectoryText" Width="400"/>
                <Button Content="📁" 
                        Background="Orange"
                        Style="{StaticResource ButtonRound}" 
                        Width="30" Height="30" 
                        Margin="10,0,0,0" 
                        Click="BrowseProject_Click"/>
            </StackPanel>

            <!-- Reference Directory -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Reference Directory" Width="150" VerticalAlignment="Center"/>
                <TextBox x:Name="ReferenceDirectoryText" Width="400"/>
                <Button Content="📁" 
                        Background="Orange"
                        Style="{StaticResource ButtonRound}" 
                        Width="30" Height="30" 
                        Margin="10,0,0,0" 
                        Click="BrowseReference_Click"/>
            </StackPanel>

            <!-- Gap Analysis Button -->
            <Button x:Name="GapAnalysisBtn"
                    Content="Gap Analysis"
                    Background="Orange"
                    Style="{StaticResource ButtonRound}"
                    Height="50"
                    Margin="0,10"
                    Width="200"
                    HorizontalAlignment="Center"
                    Click="GapAnalysis_Click"/>

            <!-- Response -->
            <TextBlock x:Name="ResponseFromApp"
                       TextWrapping="Wrap"
                       Margin="10"
                       FontSize="14"
                       Foreground="Black"/>
        </StackPanel>
    </Grid>
</UserControl>
