<UserControl x:Class="AEORG.GapAnalysis"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AEORG"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Label for Project Directory -->
        <TextBlock Text="Project Directory" 
                   VerticalAlignment="Center" 
                   Grid.Row="0" 
                   Grid.Column="0"
                   Margin="0,0,10,10"/>

        <!-- Value for Project Directory -->
        <TextBox x:Name ="ProjectDirectoryText"
                 VerticalAlignment="Center" 
                 Grid.Row="0" Grid.Column="1"/>

        <Button Content="Browse"
                Grid.Row="0"
                Grid.Column="2"
                Click="BrowseProject_Click"
                Margin="50,10,50,10"
>
        </Button>

        <!-- Label for Reference Directory -->
        <TextBlock Text="Reference Directory" 
                   VerticalAlignment="Center" 
                   Grid.Row="1"
                   Grid.Column="0"
                   Margin="0,0,10,10"/>

        <!-- Value for Reference Directory -->
        <TextBox  x:Name="ReferenceDirectoryText"
                  VerticalAlignment="Center" 
                  Grid.Row="1"
                  Grid.Column="1"/>

        <Button Content="Browse"
                Grid.Row="1"
                Grid.Column="2"
                Click="BrowseReference_Click"
                Margin="50,10,50,10"
>
        </Button>


        <Button x:Name="RunGapAnalysisINSCreate" Grid.Column="1" Grid.Row="2" Height="50" Margin="10, 10, 10, 0" Click="RunGapAnalysisINSCreate_Click">Run</Button>
        <Button x:Name="GapAnalysisBtn" Grid.Column="1" Grid.Row="3" Height="50" Margin="10, 10, 10, 0" Click="GapAnalysis_Click">Gap Analysis</Button>


        <TextBlock x:Name ="ResponseFromApp" TextWrapping="Wrap" Margin="10" Grid.Row="4" Grid.Column="1"></TextBlock>
    </Grid>
</UserControl>
